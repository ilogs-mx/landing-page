---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import WhatsappWidget from "../components/whatsappWidget.astro";

const { title } = Astro.props;

interface Props {
  title: string;
}
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:title" content="iLogs" />
    <meta
      property="og:description"
      content="iLogs Seguridad & Orden en cada Salida Escolar"
    />
    <meta property="og:url" content="https://descubre.ilogs.com.mx/" />
    <meta property="og:image" content="/image/BannerOG.webp" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="iLogs" />
    <meta
      name="twitter:description"
      content="iLogs Seguridad & Orden en cada Salida Escolar"
    />
    <meta
      name="twitter:image"
      content="https://descubre.ilogs.com.mx/image/BannerOG.webp"
    />
    <meta name="twitter:url" content="https://descubre.ilogs.com.mx/" />
  </head>
  <body
    class="bg-background text-foreground font-sans relative overflow-x-hidden pb-30 sm:pb-30"
  >
    <WhatsappWidget />
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
