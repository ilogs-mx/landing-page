<section class="callTo my-15 bg-primary p-8">
  <div class="w-full h-full">
    <div
      class="bg-[url('image/bg-CallToAction.webp')] bg-no-repeat bg-contain bg-bottom md:bg-contain"
    >
      <div class="justify-items-center p-5 md:p-25">
        <p
          class="callTo-text text-xs md:text-3xl text-center mb-4 md:mb-10 text-light"
        >
          Somos un equipo comprometido de profesionales <br />
          dedicados a mejorar la experiencia escolar y a <br />
          proporcionar herramientas efectivas para el control <br /> de salidas estudiantiles.
        </p>
        <div class="callTo-button">
          <a
            href=""
            class="font-brand text-xs md:text-2xl text-light bg-dark px-5 md:px-10 py-1 rounded-full hover:bg-light transition hover:text-dark"
          >
            CONTACTANOS
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  import { gsap } from "gsap";
  import { SplitText } from "gsap/SplitText";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(SplitText);
  gsap.registerPlugin(ScrollTrigger);

  let split = SplitText.create(".callTo-text", {
    type: "lines",
  });

  gsap.from(split.lines, {
    opacity: 0,
    x: 60,
    stagger: 0.25,
    duration: 1,
    scrollTrigger: {
      trigger: ".callTo",
      start: "top 60%",
    },
  });
  gsap.from(".callTo-button", {
    opacity: 0,
    x: 60,
    duration: 1,
    scrollTrigger: {
      trigger: ".callTo",
      start: "top 60%",
    },
  });
  gsap.from(".callTo", {
    opacity: 0,
    duration: 1,
    delay: 0.8,
    scrollTrigger: {
      trigger: ".callTo",
      start: "top 60%",
    },
  });
</script>
