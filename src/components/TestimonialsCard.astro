---
import Star from '../assets/svg/star.svg';


const { name, message, estrella = 5} = Astro.props;
---

<div>
    <slot/>
  <div class="flex justify-start ">
    {Array.from({ length: estrella }).map(() => (
      <Star class="fill-primary w-3 h-3 lg:w-6 lg:h-6" />
    ))}
    </div>
 <h1 class="text-xs md:text-lg lg:text-xl font-brand">{name}</h1>
  <p class="text-xs md:text-lg lg:text-2xl">{message}</p>
  
</div>



