---
import Instagram from "../assets/svg/instagram.svg";
import Email from "../assets/svg/email.svg";
import Facebook from "../assets/svg/facebook.svg";
---

<nav
  class="fixed top-0 flex justify-between bg-secondary px-8 z-50 w-full h-16 items-center"
>
  <img src="/image/logo.webp" alt="Ilogs" class="icon w-12 h-12 md:w-20 md:h-20" />

  <div class="flex flex-row p-3 gap-3">
    <a href="" class="icon w-6 h-6 md:w-10 md:h-10 fill-light"> <Email /> </a>
    <a href="" class="icon w-6 h-6 md:w-10 md:h-10 fill-light">
      <Facebook />
    </a>
    <a href="" class="icon w-6 h-6 md:w-10 md:h-10 fill-light">
      <Instagram />
    </a>
  </div>
</nav>
<script>
  import { gsap } from "gsap";

  gsap.from(".icon", {
    y: -100,
    stagger: 0.25,
    duration:1,
  });
</script>
