---
type Props = {
  question: string;
  answer: string;
  number: string;
};

const { question, answer, number } = Astro.props;
---

<div class="flex justify-start justify-items-center gap-2 rounded-2xl  p-3 drop-shadow-xl/50 shadow-xl/30 ">
  <div class="bg-secondary rounded-4xl w-10 h-10 flex items-center justify-center">
    <h1 class="font-bold text-xl font-brand">{number}</h1>
  </div>
  <div class="">
    <div class="border-b-1 border-primary">
    <h1 class="font-brand text-xl">{question}</h1>
     </div>
     <div>
    <p class="text-xl">{answer}</p>
    </div>
  </div>
</div>
