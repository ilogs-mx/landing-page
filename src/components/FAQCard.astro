---
type Props = {
  question: string;
  answer: string;
  number: string;
};

const { question, answer, number } = Astro.props;
---
<div class="flex justify-center mx-8 mb-5">
<div
  class="flex justify-start items-center gap-5 rounded-2xl p-3 drop-shadow-xl/50 shadow-md  sm:w-2xl"
>
  <div class="bg-secondary w-18 max-h-min sm:w-12 sm:h-auto rounded-full flex items-center justify-center">
      <h1 class="font-bold text-base sm:text-lg">{number}</h1>
  </div>
  <div class="">
    <div class="border-b-1 border-primary mb-2">
      <h1 class="font-bold text-base sm:text-xl">{question}</h1>
    </div>
    <div>
      <p class="text-base sm:text-xl">{answer}</p>
    </div>
  </div>
</div>
</div>
